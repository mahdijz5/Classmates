<% if(posts.length > 0)  {%>
	<% for(post of posts) {%>
		<div class="col-lg-4" id="postCard">
			<div class="card p-2" style="" id="post">
				<img
					src="http://localhost:3000/uploads/thumbnail/<%= post.thumbnail%>"
					class="card-img-top"
					alt="..."
					id="postImg"
				/>
				<div class="card-body">
					<h5 class="card-title"><%= post.title %> </h5>
					<p class="card-text">
						<%- truncate(post.body ,35) %> 
					</p>
					<br>
					<div style="position: absolute; left:10px;">
						<span style="cursor: default;"  class=" btn btn-warning text-left fa fa-eye p-2"> : <%= post.views %> </span>
						<span  style="cursor: default;" class=" btn btn-danger text-left fa fa-heart-o p-2"> : <%= post.likes %> </span>
					</div>
					<a href="/post/<%= post.id %> "  class="btn btn-primary">... ادامه</a>
				</div>
			</div>
		</div>
	<% } %>  
<% } %>  