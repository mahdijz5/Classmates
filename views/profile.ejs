<div class="row py-5 px-4 bg-light">
	<div class="col-md-7 mx-auto">
		<!-- Profile widget -->
		<div class="bg-white shadow rounded overflow-hidden">
			<div class="px-4 pt-0 pb-5 cover bg-dark">
				<div class="media align-items-end profile-head">
					<div class="profile mr-3">
						<img
							src="http://localhost:3000/uploads/profile/<%= user.profileImg %> "
							alt="..."
							width="130"
							class="rounded mb-2 img-thumbnail"
						/>
					</div>
					<div class="media-body mb-5 text-white">
						<h4 class="mt-0 mb-0"><%= user.username %></h4>
						<p class="small mb-4">
							<i class="fa fa-map-marker-alt mr-2"></i><%=
							convertDate(user.createAt) %>
						</p>
					</div>
				</div>
			</div>
			<div class="bg-light p-4 d-flex justify-content-end text-center">
				<ul class="list-inline mb-0">
					<li class="list-inline-item">
						<h5 class="font-weight-bold mb-0 d-block">
							<%if(posts.length > 0 ) { %> <%= posts.length %> <%}else{ %>0<%} %>
						</h5>
						<small class="text-muted">
							<i class="fa fa-image mr-1"></i>پست ها</small
						>
					</li>
				</ul>
			</div>
			<div class="py-4 px-4">
				<div class="d-flex align-items-center justify-content-between mb-3">
					<h5 class="mb-0">Recent photos</h5>
					<a href="#" class="btn btn-link text-muted">Show all</a>
				</div>
				<div class="row">
                    <% if(posts.length > 0) {%>  
                    <% for(post of posts) {%> 
					<div class="col-lg-6 mb-2 pr-lg-1">
						<div class="card p-2" style="" id="post">
                            <img
                                src="http://localhost:3000/uploads/thumbnail/<%= post.thumbnail%>"
                                class="card-img-top"
                                alt="..."
                                id="postImg"
                            />
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %> </h5>
                                <p class="card-text">
                                    <%- truncate(post.body ,20) %>
                                </p>
                                <a href="/post/<%= post.id %> " class="btn btn-primary">... ادامه</a>
                            </div>
                        </div>
					</div>
                    <% } %> 
                    <% } %> 
				</div>
                <%- include('./includes/pagination.ejs')  %> 
			</div>
		</div>
	</div>
</div>
