<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Title</th>
			<th scope="col">Date</th>
			<th scope="col">Status</th>
		</tr>
	</thead>
<% if(posts.length > 0) { %>
	<% for(post of posts) { %>
			<tbody>
				<tr data-bs-toggle="modal" data-bs-target="#a<%=post.id%>a" id="blog">
					<th scope="row">1</th>
					<td><a href="/post/<%= post.id %> "><%= post.title %> </a></td>
					<td><%= convertDate(post.date) %></td>
					<% if(post.status == 'private') { %>
						<td class="bg-warning">خصوصی</td>
						<% }else { %>
							<td class="bg-success">عمومی</td>
							<% } %>   
				</tr>
			</tbody>
		
		
		<!-- Modal -->
		<div
			class="modal fade"
			id="a<%=post.id%>a"
			tabindex="-1"
			aria-labelledby="exampleModalLabel"
			aria-hidden="true"
		>
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel"><%= post.title %> </h5>
						<button
							type="button"
							class="btn-close"
							data-bs-dismiss="modal"
							aria-label="Close"
						></button>
					</div>
					<div class="modal-body">چکار مخواهید کنید با این پست ؟</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
							بستن
						</button>
						<a type="button" href="/admin/edit/<%= post.id %> "  class="btn btn-warning">ویرایش</a>
						<a type="button" href="/admin/delete/<%= post.id %>"  class="btn btn-danger">حذف</a>
					</div>
				</div>
			</div>
		</div>
	<% } %>  
<% } %>  
</table>

<%- include('../../includes/pagination.ejs') %> 